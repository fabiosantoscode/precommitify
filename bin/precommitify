#!/usr/bin/env node
'use strict'

const fs = require('fs')
const sh = require('child_process').execSync

sh('npm install --save-dev husky standard-format istanbul@1.1.0-alpha.1')

const pkg = JSON.parse(fs.readFileSync('package.json', 'utf-8'))

pkg.scripts.test = 'istanbul cover ./node_modules/.bin/_mocha'
pkg.scripts.precommit = 'npm run lint && npm run test'
pkg.scripts.lint = 'standard-format -w lib/*'

fs.writeFileSync('package.json', JSON.stringify(pkg, null, 2))

